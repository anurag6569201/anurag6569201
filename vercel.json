{
    "version": 2,
    "builds": [
      {
        "src": "portfolio/wsgi.py",
        "use": "@vercel/python",
        "config": {
          "maxLambdaSize": "15mb",
          "runtime": "python3.9"
        }
      },
      {
        "src": "build.sh",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "staticfiles_build"
        }
      }
    ],
    "routes": [
      {
        "src": "/static/(.*)",
        "dest": "/static/$1"
      },
      {
        "src": "/(.*)",
        "dest": "portfolio/wsgi.py"
      }
    ],
    "buildCommand": "./build.sh",
    "installCommand": "apt-get update && apt-get install -y libmysqlclient-dev && pip install -r requirements.txt"
  }